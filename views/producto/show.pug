extends ../layout
block content 
    link(rel="stylesheet", href="/css/juego.css")
    h1= producto.nombre
    img(src=`/uploads/${producto.nombre}.jpg`, alt=`${producto.nombre}`)
    h2=producto.descripcion
    h3= `${producto.precio}€`
    br
    br
    form(action=`/productos/edit/${producto.idproducto}`, method="get")
        input(type="submit",class="btn edit" value="Editar") 
    form(action=`/productos/delete/${producto.idproducto}`, method="post")
        input(type="submit",class="btn delete" value="Eliminar") 
        input(type="hidden", name="password" value="mi-contraseña")